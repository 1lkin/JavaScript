  Ternary operator ? :   ----------------: let icazə = yaş >= 18 ? "Giriş icazəlidir" : "Yaş məhduddur";
  switch   ------------------------------: let lift = "down";

                                           switch (lift) {
                                             case "up":
                                               console.log("go up");
